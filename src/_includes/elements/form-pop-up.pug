mixin form-pop-up()
  button.show-modal Did Yebun
    .modal.hidden(id="app")
      .add-product( :class="{'open': formOpen}")
        .button-copy( v-show="!formOpen" @click="formOpen = true") Add Product
        form(@submit="cancel()")

          .form--field
            label Product Title *
            input(type="text" class="form--element" name="title" v-model="productData.title" placeholder="Title" required="")

          .form--container.-inline
            .form--field.-short
              label Product Rating *
              input(type="number" class="form--element" name="rating" v-model="productData.rating" placeholder="Rating" required="" min="0" max="5" step="0.5")

            .form--field.-short
              label Product Price *
              span.form--price $
              input(type="text" class="form--element" name="price" v-model="productData.price" placeholder="Price" required="" min="0" max="500" pattern="\d+(\.\d{2})?")

            .form--field.-short
              label List Price *
              span.form--price $
              input(type="text" class="form--element" name="list_price" v-model="productData.list_price" placeholder="List Price" required="" min="0" max="500" pattern="\d+(\.\d{2})?")


          .form--field
            label.emoji Is Featured
              input(type="checkbox" name="is_featured" v-bind="productData.is_featured")
              span.featured-note If Is Featured is selected the product will appear in a large card.

          .form--field
            label Product Description
            textarea.form--element.textarea(v-model="productData.description" placeholder="Description")                                


          button(type="submit" class="submit-button") Add Product
          .cancel 
            span(@click="cancel()") Cancel

