mixin header()

  header.c-header
    .c-header__wrapper.wrapper

      //- Logo
      .c-header__logo
        .c-header__logo__wrapper                                
          +logo({
            link: './index.html',
            class: 'e-logo e-logo--white',
            name: 'logo',
            text: 'e-logo__text'
          })

      //- Navigation list
      +navigation()

      //- Burger menu
      .c-header__burger-menu
        +burger-menu()